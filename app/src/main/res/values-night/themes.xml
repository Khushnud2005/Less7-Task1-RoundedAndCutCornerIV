<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Less7Task1RoundedCutCornerIV" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">30dp</item>
    </style>

    <style name="cut_corner">
        <item name="cornerSize">40dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="specific_cut_corner">
        <item name="cornerSizeTopLeft">80dp</item>
        <item name="cornerSizeBottomRight">80dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="specific_rounded_corner">
        <item name="cornerSizeTopLeft">75dp</item>
        <item name="cornerSizeBottomRight">75dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>
</resources>